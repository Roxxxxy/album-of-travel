<% if @photo.errors.present? %>
  <ul>
    <% @photo.errors.each do |error, message| %>
    <li><%= "#{error.capitalize} #{message}" %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="page-header">
    <h1>Album of Travel   <small> 記錄我的美好旅程 </small></h1>
  </div>
  <div class="form container">
    <%= form_for @photo  do |f| %>
      <div class="form-group">
        <%= f.label :title, "Title" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :date, "Date" %>
        <%= f.date_field :date, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description, "description" %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :file_location, "File Location" %>
        <%= f.file_field :file_location %>
      </div>
      <div class="btn-toolbar" role="toolbar">
      <%= f.submit class: "btn btn-danger active " %>
      <%= link_to '<span class = "glyphicon glyphicon-home"></span>'  .html_safe, photos_path, class: "btn btn-primary active " %>
    </div>
    <% end %>
  </div>
</div>
